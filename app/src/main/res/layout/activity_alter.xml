<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >
    <View
        android:id="@+id/view1"
        android:background="#D23A31"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageView
        android:id="@+id/return1"
        android:src="@drawable/return1"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:text="我的资料"
        android:textColor="#FFFFFF"
        android:textSize="19dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/return1"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/alterRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/view1"
        >
    </android.support.v7.widget.RecyclerView>
    <ListView
        android:id="@+id/alterListview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/alterRecyclerView"
        >
    </ListView>
    <View  android:layout_height="3px"
        android:layout_width="match_parent"
        android:background="#1E000000"
        app:layout_constraintTop_toBottomOf="@+id/alterListview"
        />


</android.support.constraint.ConstraintLayout>
