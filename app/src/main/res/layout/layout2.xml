<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent">

<android.support.v7.widget.RecyclerView
    android:id="@+id/mrecyclerview1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent">
</android.support.v7.widget.RecyclerView>

<View
    android:id="@+id/view1"
    android:layout_height="1dp"
    android:layout_width="match_parent"
    android:background="#1E000000"
    android:layout_marginTop="5dp"
    app:layout_constraintTop_toBottomOf="@+id/mrecyclerview1" />

<TextView
    android:id="@+id/recommendtext1"
    android:text="推荐歌单"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    app:layout_constraintTop_toBottomOf="@+id/view1"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginStart="5dp" />
<ImageView
    android:id="@+id/arrow_down"
    android:src="@drawable/arrow_down"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="2dp"
    app:layout_constraintTop_toBottomOf="@+id/view1"
    app:layout_constraintLeft_toRightOf="@+id/recommendtext1"
    android:layout_marginStart="2dp" />
<android.support.v7.widget.RecyclerView
    android:id="@+id/mrecyclerview2"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    app:layout_constraintTop_toBottomOf="@+id/recommendtext1"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginLeft="6dp"
    android:layout_marginStart="6dp">
</android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>
